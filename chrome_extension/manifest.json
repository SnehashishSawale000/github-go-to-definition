{
  "manifest_version": 2,
  "name": "Github Ctags",
  "description": "Ctags for Github pull requests",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["*://github.com/*"],
      "css": ["assets/style.css"],
      "js": ["js/jquery-3.0.0.min.js", "js/urlchange.js", "js/modal.js", "js/inject.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "scripts": ["js/jquery-3.0.0.min.js", "js/background.js"]
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  }
}